<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgBigDarkCircle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/dark_background_circle"
        android:alpha="0.98"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/dark_background_circle"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/orange_background_cirle"
        android:layout_marginLeft="331dp"
        android:layout_marginTop="225dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/orange_background_cirle"
        android:layout_marginLeft="-55dp"
        android:layout_marginTop="319dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/proxima_nova_soft_bold"
        android:textSize="35sp"
        android:lineHeight="52dp"
        android:text="Manage your\ncollections\neasier and digitally"
        android:layout_marginLeft="38dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="38dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_light"
        android:textSize="21sp"
        android:text="efficiently curate your physical items\ndigitally today!"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWelcomeCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="60dp"
        android:paddingVertical="18dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/create_account_button"
        android:fontFamily="@font/proxima_nova_soft_bold"
        android:text="Create a free account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_regular"
        android:textSize="19sp"
        android:text="@string/signIn_prompt"
        android:textAllCaps="false"/>

    </LinearLayout>


</FrameLayout>
